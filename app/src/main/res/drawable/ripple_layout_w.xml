<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dip"/>
            <gradient android:angle="-90" android:endColor="@color/color_Grey" android:startColor="@color/color_Grey"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dip"/>
            <solid android:color="@color/color_Grey"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dip"/>
            <gradient android:angle="-90" android:endColor="@color/color_White" android:startColor="@color/color_White"/>
        </shape>
    </item>
</selector>